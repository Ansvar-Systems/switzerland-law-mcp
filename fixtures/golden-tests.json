{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Switzerland Law MCP",
  "description": "Golden contract tests for the Switzerland Law MCP covering data protection (nFADP/DSG), information security, telecommunications, obligations, criminal code cybercrime provisions, and electronic signatures legislation",
  "tests": [
    {
      "id": "ch-001",
      "category": "article_retrieval",
      "description": "Retrieve Art. 1 of the new Federal Act on Data Protection (nFADP/DSG, SR 235.1) -- purpose and scope",
      "tool": "get_provision",
      "input": {
        "document_id": "SR 235.1",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "text_not_empty": true
      }
    },
    {
      "id": "ch-002",
      "category": "article_retrieval",
      "description": "Retrieve Art. 1 of the Federal Act on Information Security (ISA, SR 128.1) -- purpose",
      "tool": "get_provision",
      "input": {
        "document_id": "SR 128.1",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "text_not_empty": true
      }
    },
    {
      "id": "ch-003",
      "category": "article_retrieval",
      "description": "Retrieve Art. 143bis of the Swiss Criminal Code (StGB, SR 311.0) -- unauthorized access to computer systems",
      "tool": "get_provision",
      "input": {
        "document_id": "SR 311.0",
        "section": "143bis"
      },
      "assertions": {
        "result_not_empty": true,
        "text_not_empty": true
      }
    },
    {
      "id": "ch-004",
      "category": "search",
      "description": "Full-text search for 'Personendaten' (personal data in German) returns provisions",
      "tool": "search_legislation",
      "input": {
        "query": "Personendaten"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["personendaten"]
      }
    },
    {
      "id": "ch-005",
      "category": "search",
      "description": "Full-text search for 'Datenschutz' (data protection in German) returns provisions",
      "tool": "search_legislation",
      "input": {
        "query": "Datenschutz"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["datenschutz"]
      }
    },
    {
      "id": "ch-006",
      "category": "search",
      "description": "Full-text search for 'Informationssicherheit' returns ISA provisions",
      "tool": "search_legislation",
      "input": {
        "query": "Informationssicherheit"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["informationssicherheit"]
      }
    },
    {
      "id": "ch-007",
      "category": "citation_roundtrip",
      "description": "Citation for nFADP Art. 2 includes fedlex.admin.ch URL pattern",
      "tool": "get_provision",
      "input": {
        "document_id": "SR 235.1",
        "section": "2"
      },
      "assertions": {
        "result_not_empty": true,
        "citation_url_pattern": "fedlex\\.admin\\.ch",
        "text_not_empty": true
      }
    },
    {
      "id": "ch-008",
      "category": "article_retrieval",
      "description": "Retrieve Art. 1 of Code of Obligations (OR, SR 220)",
      "tool": "get_provision",
      "input": {
        "document_id": "SR 220",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "text_not_empty": true
      }
    },
    {
      "id": "ch-009",
      "category": "eu_cross_reference",
      "description": "nFADP cross-reference to EU basis -- Switzerland nFADP aligns with GDPR",
      "tool": "get_eu_basis",
      "input": {
        "document_id": "SR 235.1"
      },
      "assertions": {
        "result_not_empty": true
      }
    },
    {
      "id": "ch-010",
      "category": "eu_cross_reference",
      "description": "Federal Act on Electronic Signatures (ZertES) cross-reference to EU basis",
      "tool": "get_eu_basis",
      "input": {
        "document_id": "SR 943.03"
      },
      "assertions": {
        "result_not_empty": true
      }
    },
    {
      "id": "ch-011",
      "category": "negative_test",
      "description": "Non-existent Swiss law returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "Bundesgesetz ueber fiktive Angelegenheiten 9999",
        "section": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "ch-012",
      "category": "negative_test",
      "description": "Malformed article number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "document_id": "SR 235.1",
        "section": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
